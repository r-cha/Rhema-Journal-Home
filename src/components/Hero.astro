---
import { APP_STORE_URL } from "../consts.ts";
---

<section
  id="hero"
  class="flex flex-col w-full h-auto items-center justify-items-center border-y-[1px] border-gray-400"
>
  <div
    class="py-12 md:py-24 px-3 flex flex-col gap-4 md:gap-12 max-w-4xl min-h-auto items-center justify-items-center justify-start"
  >
    <h1
      class="text-center text-4xl md:text-6xl font-extrabold h-auto leading-none md:leading-relaxed"
      style="font-family: 'Raleway';"
    >
      What is God speaking?
    </h1>
    <span class="text-grayish text-xl text-center leading-relaxed">
      Pray through His written word to hear His spoken word
    </span>
    <div class="flex flex-row items-center gap-6">
      <a
        href={APP_STORE_URL}
        target="_blank"
        rel="noreferrer noopener"
        class="text-grayish text-lg md:text-xl font-bold p-4 md:py-6 md:px-12 rounded-full bg-morning border-2 border-sunlight"
      >
        Join the Beta
      </a>
      <a
        href="#details"
        class="text-grayish text-sm md:text-lg font-bold p-4 md:py-6 md:px-12 rounded-full"
        style="transition: 0.3s;"
      >
        Learn More →</a
      >
    </div>
  </div>
</section>
