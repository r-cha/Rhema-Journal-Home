---
import Bible from "./bible.astro";
import { APP_STORE_URL } from "../consts.ts";
---

<section
  id="hero"
  class="isolate w-full relative overflow-hidden flex flex-col items-center justify-items-center border-y-[1px] border-gray-400"
>
  <div
    class="z-10 py-12 md:py-24 px-3 flex flex-col gap-4 md:gap-12 max-w-4xl min-h-auto items-center justify-items-center justify-start"
  >
    <h1
      class="drop-shadow-lg text-center text-4xl md:text-6xl font-extrabold h-auto leading-none"
      style="font-family: 'Raleway';"
    >
      What is God speaking?
    </h1>
    <span
      class="text-grayish text-xl text-center leading-relaxed drop-shadow-lg"
    >
      Pray through His written word and hear His spoken word
    </span>
    <div class="flex flex-row items-center gap-6">
      <a
        href={APP_STORE_URL}
        target="_blank"
        rel="noreferrer noopener"
        class="drop-shadow-lg text-grayish text-lg md:text-xl font-bold p-4 md:py-6 md:px-12 rounded-full bg-morning border-2 border-sunlight"
      >
        Join the Testflight Beta
      </a>
    </div>
  </div>
  <div
    class="z-0 absolute top-0 left-0 text-xl leading-none tracking-tight opacity-10 text-justify text-nowrap"
  >
    <Bible />
    <Bible />
    <Bible />
    <Bible />
  </div>
</section>
